# Example environment variables for local development and production.
# Copy to `.env` and update values.

# === Django Settings ===
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# === Database (PostgreSQL) ===
# DATABASE_URL=postgresql://user:password@localhost:5432/lamla_db
DATABASE_URL=sqlite:///db.sqlite3

# === FastAPI Settings ===
FASTAPI_BASE_URL=http://localhost:8001
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8001
FASTAPI_WORKERS=4
FASTAPI_RELOAD=false

# FastAPI CORS origins (comma-separated)
FASTAPI_ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000,http://127.0.0.1:3000,

# === Django CORS / CSRF ===
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://lamla-ai.vercel.app
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://lamla-ai.vercel.app

# === LLM Providers ===
# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your-deployment-name
AZURE_OPENAI_API_VERSION=2024-12-01-preview

# DeepSeek
DEEPSEEK_API_KEY=your-deepseek-key-here
DEEPSEEK_API_URL=https://api.deepseek.com/v1/chat/completions

# Gemini
GEMINI_API_KEY=your-gemini-key-here

# HuggingFace
HUGGING_FACE_API_TOKEN=your-hf-token-here

# AI provider priority
AI_PROVIDER_PRIORITY=azure,deepseek,gemini,huggingface

# === Web Search (Tavily) ===
SEARCH_API_KEY=your-tavily-api-key-here

# === Email (optional) ===
AUTH_EMAIL_HOST_USER=your-email@example.com
AUTH_EMAIL_HOST_PASSWORD=your-email-password
WELCOME_EMAIL_HOST_USER=your-email@example.com
WELCOME_EMAIL_HOST_PASSWORD=your-email-password
